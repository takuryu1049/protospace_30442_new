.main
  .inner
    .form__wrapper
      %h2.page-heading ユーザー新規登録
      = form_with model: @user, url:"/users", local: true do |f|
        .field
          = f.label :email, "メールアドレス"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          = f.label :password, "パスワード（6文字以上）"
          %br/
          = f.password_field :password, autocomplete: "new-password"
        .field
          = f.label :password_confirmation, "パスワード再入力"
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"
        .field
          = f.label :name, "ユーザー名"
          %br/
          = f.text_field :name
        .field
          = f.label :profile, "プロフィール"
          %br/
          = f.text_area :profile, class: :form__text
        .field
          = f.label :occupation, "所属"
          %br/
          = f.text_area :occupation, class: :form__text
        .field
          = f.label :position, "役職"
          %br/
          = f.text_area :position, class: :form__text
        .actions
          = f.submit "新規登録", class: :form__btn
